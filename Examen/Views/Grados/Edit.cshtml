@{
    @model Grado

}
@using (Html.BeginForm("Edit", "Grados", FormMethod.Post))
{
    @Html.Label("Nombre")
    @Html.TextBoxFor(m => m.nombre , new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })

    @Html.Label("Profesor")
    @Html.DropDownListFor(m => m.profesor_id, ListProfesores.ItemSelect(Model?.profesor_id.ToString() ?? ""), "Selecciona un profesor", new { @class = "form-control"})
    @Html.ValidationMessageFor(model => model.profesor_id, "", new { @class = "text-danger" })

    <button type="submit">Guardar</button>
}