@{
    @model Grado

}

@using (Html.BeginForm("Delete", "Grados", FormMethod.Post))
{
    @Html.Label("Nombre")
    @Html.TextBoxFor(m => m.nombre , new { @class = "form-control", @readonly = true  })

    @Html.Label("Profesor")
    @Html.DropDownListFor(m => m.profesor_id, ListProfesores.ItemSelect(Model?.profesor_id.ToString() ?? ""), "Selecciona un profesor", new { @class = "form-control", @disabled = true})
    @Html.ValidationMessageFor(model => model.profesor_id, "", new { @class = "text-danger" })

    <button type="submit" class="btn btn-danger">Eliminar</button>
}