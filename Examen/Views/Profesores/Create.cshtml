@using Examen.Database.Tables;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    @model Profesor

}

@using (Html.BeginForm("Create", "Profesores", FormMethod.Post))
{
    @Html.Label("Nombre")
    @Html.TextBoxFor(m => m.nombre , new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })

    @Html.Label("Apellidos")
    @Html.TextBoxFor(m => m.apellidos , new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.apellidos, "", new { @class = "text-danger" })

    @Html.Label("Genero")
    @Html.DropDownListFor(m => m.genero, ListGeneros.ItemSelect(Model?.genero.ToString() ?? ""), "Selecciona un genero", new { @class = "form-control"})
    @Html.ValidationMessageFor(model => model.genero, "", new { @class = "text-danger" })

    <button type="submit">Guardar</button>
}
