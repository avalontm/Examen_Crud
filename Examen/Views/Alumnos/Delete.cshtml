@{
    @model Alumno

}

@using (Html.BeginForm("Delete", "Alumnos", FormMethod.Post))
{

    @Html.Label("Nombre")
    @Html.TextBoxFor(m => m.nombre , new { @class = "form-control", @readonly = true  })

    @Html.Label("Apellidos")
    @Html.TextBoxFor(m => m.apellidos , new { @class = "form-control", @readonly = true  })

    @Html.Label("Fecha Nacimiento")
    @Html.TextBoxFor(model => model.fecha_nacimiento, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" , @readonly =true })

    @Html.Label("Genero")
    @Html.DropDownListFor(m => m.genero, ListGeneros.ItemSelect(Model.genero.ToString()), "Selecciona un genero", new { @class = "form-control" ,@disabled =true})

    <button type="submit" class="btn btn-danger">Eliminar</button>
}